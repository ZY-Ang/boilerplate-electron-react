{
  "name": "boilerplate-electron-react",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "electron-is-dev": "^1.1.0",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-scripts": "3.2.0"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "author": {
    "name": "Your name",
    "email": "yourname@yourdomain.com",
    "url": "https://yourwebsite.com"
  },
  "build": {
    "appId": "com.boilerplate.electron",
    "productName": "My Electron App",
    "copyright": "Copyright Â© 2019 ${author}",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32",
            "x64"
          ]
        }
      ]
    },
    "files": [
      "build/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "rescripts": [
    "env"
  ],
  "scripts": {
    "start": "wait-on http://localhost:3000 && cross-env ELECTRON_START_URL=http://localhost:3000 electron .",
    "start-server": "cross-env BROWSER=none rescripts start",
    "electron-pack": "npm run pack:win",
    "pack:osx": "electron-builder build --macos",
    "pack:win": "electron-builder build --windows",
    "build": "rescripts build",
    "test": "rescripts test",
    "postinstall": "electron-builder install-app-deps",
    "preelectron-pack": "npm run build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@rescripts/cli": "0.0.12",
    "@rescripts/rescript-env": "0.0.10",
    "cross-env": "^6.0.3",
    "electron": "^7.2.4",
    "electron-builder": "^21.2.0",
    "wait-on": "^3.3.0"
  }
}
